@page
@model ZimFund.Pages.Comments.DeleteModel
@using Microsoft.AspNetCore.Identity

<h2>Confirmar Exclusão</h2>

<p>Você tem certeza que deseja excluir este comentário?</p>

<form method="post">
    <input type="hidden" asp-for="Comment.Id" />
    <button type="submit" class="btn btn-danger">Confirmar</button>

    @if (User.IsInRole("admin"))
    {
        <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
    }
    else
    {
        <a asp-page="/Projects/Select" asp-route-id="@Model.Comment.ProjectId" class="btn btn-secondary">Cancelar</a>
    }
</form>
