@page
@model ZimFund.Pages.Projects.IndexModel

<h2>Projetos</h2>

<a asp-page="/Projects/Create" class="btn btn-primary mb-3">Novo Projeto</a>

<form method="get" class="mb-4">
    <div class="input-group">
        <input type="text" name="SearchTerm" class="form-control" placeholder="Buscar por título ou descrição..." value="@Model.SearchTerm" />
        <button type="submit" class="btn btn-outline-secondary">Buscar</button>
    </div>
</form>

@if (Model.Projects.Any())
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Título</th>
                <th>Descrição</th>
                <th>Categoria</th>
                <th>Autor</th>
                <th>Criado em</th>
                <th>Atualizado em</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model.Projects)
            {
                <tr>
                    <td>@project.Title</td>
                    <td>@project.Description</td>
                    <td>@project.Category.Name</td>
                    <td>@project.User.FullName</td>
                    <td>@project.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@project.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        <a asp-page="/Projects/Select" asp-route-id="@project.Id" class="btn btn-sm btn-info">Ver</a>

                        @if (User.IsInRole("admin"))
                        {
                            <a asp-page="/Projects/Edit" asp-route-id="@project.Id" class="btn btn-sm btn-warning">Editar</a>
                            <a asp-page="/Projects/Delete" asp-route-id="@project.Id" class="btn btn-sm btn-danger">Excluir</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nenhum projeto encontrado.</p>
}
