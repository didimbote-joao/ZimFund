@page "{id:int}"
@model ZimFund.Pages.Projects.DeleteModel
@{
    ViewData["Title"] = "Excluir Campanha";
}

<h2>Confirmar Exclusão</h2>

<h4>Tem certeza que deseja excluir esta campanha?</h4>
<div>
    <h5>@Model.Project.Title</h5>
    <p>@Model.Project.Description</p>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
</form>
