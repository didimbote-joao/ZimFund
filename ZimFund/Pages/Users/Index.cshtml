@page
@model ZimFund.Pages.Users.IndexModel

<h2>Usuários</h2>

<form method="get" class="mb-3 d-flex">
    <input type="text" name="search" value="@Model.Search" class="form-control me-2" placeholder="Pesquisar por nome ou email..." />
    <button type="submit" class="btn btn-primary">Pesquisar</button>
</form>

<table class="table table-bordered">
    <thead class="table-light">
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Telefone</th>
            <th>Endereço</th>
            <th>Doações</th>
            <th>Criado</th>
            <th>Atualizado</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Users.Any())
        {
            foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.Address</td>
                    <td>
                        <strong>@user.Donations.Count()</strong> doações<br />
                        <span class="text-muted">Total: @user.Donations.Sum(d => d.Amount).ToString("C")</span>
                    </td>
                    <td>@user.CreatedAt.ToString("dd/MM/yyyy")</td>
                    <td>@user.UpdatedAt.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a asp-page="/Users/Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning ">Editar</a>
                        <a asp-page="/Users/Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="8" class="text-center">Nenhum usuário encontrado.</td></tr>
        }
    </tbody>
</table>
