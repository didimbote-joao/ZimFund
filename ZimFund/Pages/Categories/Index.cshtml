@page
@model ZimFund.Pages.Categories.IndexModel
@{
    ViewData["Title"] = "Categorias";
}

<h1>@ViewData["Title"]</h1>

<a asp-page="Create" class="btn btn-primary mb-3"><i class="bi bi-plus-square"></i> Nova Categoria</a>

<form method="get" class="mb-3 d-flex" role="search">
    <div class="input-group">
        <input type="text" name="SearchTerm" value="@Model.SearchTerm" class="form-control me-2" placeholder="Buscar por nome...">
        <button type="submit" class="btn btn-outline-secondary">
            <i class="bi bi-search"></i> Buscar
        </button>
    </div>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Criada em</th>
            <th>Atualizada em</th>
            <th>Criador</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.Categories)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.CreatedAt.ToString("dd/MM/yyyy")</td>
                <td>@category.UpdatedAt.ToString("dd/MM/yyyy")</td>
                <td>@category.User?.UserName</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-page="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>