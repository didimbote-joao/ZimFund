@page
@model ZimFund.Pages.Categories.IndexModel
@{
    ViewData["Title"] = "Categorias";
}

<h1>Categorias</h1>

<a asp-page="Create" class="btn btn-primary mb-3">Nova Categoria</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Criada em</th>
            <th>Atualizada em</th>
            <th>Criador</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.Categories)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@category.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@category.User?.UserName</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-page="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
